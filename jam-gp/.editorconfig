# EditorConfig helps developers define and maintain consistent coding styles between different editors and IDEs.
#
# For more information about the properties used in this file, please see the documentation:
# https://editorconfig.org

# This file is the top-most one.
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

# Go
[*.go]
indent_style = tab
